    @await RenderSectionAsync("Scripts", required: false)
    <script>
        const uiToggle = document.getElementById("ui-toggle-button")
        uiToggle.addEventListener("click", (ev) => {

            ev.preventDefault()

            // Check if HTML element has ".ui-dark"
            const darkMode = document.documentElement.classList.contains("ui-dark")

            // Toggle dark mode (change HTML class and store preference in localStorage)
            if (darkMode) {

                // Change to light mode
                document.documentElement.classList.remove("ui-dark")
                localStorage.setItem("ui-dark", false);

            } else {

                // Change to dark mode
                document.documentElement.classList.add("ui-dark")
                localStorage.setItem("ui-dark", true);
            }

        })
        // Set initial light/dark display mode
        const darkMode = localStorage.getItem("ui-dark")
        if (darkMode === "true") {
            document.documentElement.classList.add("ui-dark")
        }
    </script>
