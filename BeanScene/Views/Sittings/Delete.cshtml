@model BeanScene.Models.Sitting

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<section class="container category-delete py-5">
    <div class="col-md-8 mx-auto">
        @*<h4>@ViewData["Title"]</h4>*@
        @*<hr />*@
        <h3 class="py-4 view-title">Are you sure you want to delete this <span class="text-danger">@Model.SittingTypeId - @Model.SittingType.Name?</span></h3>
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SittingType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SittingType.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StartTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StartTime.Time)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EndTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EndTime.Time)
                </dd>
                @* <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Schedule)
                </dt>*@
                @*  <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Schedule.Id)
                </dd>*@
            </dl>
            <div class="d-flex justify-content-between aligh-items-center">
                <a asp-action="Index" class="underline-offset p-1 text-secondary pointing">
                    <i class="bi bi-arrow-left"></i>
                    Cancel
                </a>
                <form asp-action="Delete" class="text-end">
                    <input type="hidden" asp-for="Date" />
                    <input type="hidden" asp-for="SittingTypeId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</section>