@model BeanScene.Models.Sitting

@{
    ViewData["Title"] = "Sitting Details";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}


<section class="container category-details py-5">
    <div class="col-md-8 mx-auto">
        <h4 class="view-title">@ViewData["Title"]</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SittingType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SittingType.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartTime.Time)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EndTime.Time)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Schedule)
            </dt>
            @* <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.Id)
            </dd>*@
        </dl>
        <hr />
        <div class="d-flex justify-content-between aligh-items-center">

            <a asp-action="Index" class="underline-offset p-1 text-secondary pointing">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>

            <div class="d-flex gap-3">
                <a asp-action="Edit" asp-route-sittingTypeId="@Model.SittingTypeId" asp-route-dateString="@Model.Date.ToString("yyyy-MM-dd")" class="btn btn-edit">Edit</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-sittingTypeId="@Model.SittingTypeId" asp-route-dateString="@Model.Date.ToString("yyyy-MM-dd")" title="Delete Sitting">
                    <i class="bi bi-trash-fill" aria-hidden="true" aria-label="Delete"></i> <span class="visually-hidden"> Delete</span>
                </a>
            </div>

        </div>
    </div>

</section>
