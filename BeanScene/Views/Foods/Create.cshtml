@model BeanScene.Models.Food

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<section class="container category-create mt-5">
    <div class="row mt-4">
        <div class="col-md-8 mx-auto">
            <h3 class="view-title">Creating new menu</h3>
            <hr />
            <div class="col-md-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-4">
                        <label asp-for="Name" class="control-label p-1"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="ShortDescription" class="control-label p-1"></label>
                        <input asp-for="ShortDescription" class="form-control" />
                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="LongDescription" class="control-label p-1"></label>
                        <input asp-for="LongDescription" class="form-control" />
                        <span asp-validation-for="LongDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="AllergyInformation" class="control-label p-1"></label>
                        <input asp-for="AllergyInformation" class="form-control" />
                        <span asp-validation-for="AllergyInformation" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Price" class="control-label p-1"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="ImageUrl" class="control-label p-1"></label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="ImageThumbnailUrl" class="control-label p-1"></label>
                        <input asp-for="ImageThumbnailUrl" class="form-control" />
                        <span asp-validation-for="ImageThumbnailUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="WeeklySpecial" /> @Html.DisplayNameFor(model => model.WeeklySpecial)
                        </label>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="CategoryId" class="control-label p-1"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    </div>

                    <div class="form-group d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="underline-offset p-1 text-secondary pointing">
                            <i class="bi bi-arrow-left"></i>
                            Back to List
                        </a>
                        <input type="submit" value="Create" class="btn btn-primary" />

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
